include-file = $HOME/.config/polybar/modules.ini

[colors]
black = #000000
grey = #999999
white = #ffffff
red = #cc0000
green = #4ba651
yellow = #f1c232
blue = #1650a9

magenta = #9d19e1
cyan = #6CAC99
bblue = #0b5394

[bar/izquierda]
monitor = "HDMI-A-0"

background = ${colors.black}
foreground = ${colors.white}
border-color = ${colors.black}

enable-ipc = true
wm-restack = bspwm
modules-left = bspwm
fix-center = true
padding = 1
top = true

width = 21%
height = 27
offset-x = 7
offset-y = 5
border-size = 4

font-0 = Hack Nerd Font:style=Regular:size=10:antialias=true;3
font-1 = Font Awesome 5 Free Solid:size=13:antialias=true;3
font-2 = Font Awesome 5 Brands:size=13:antialias=true;3
font-3 = Sans:size=7:antialias=true;3


[bar/derecha]
monitor = "HDMI-A-0"

background = ${colors.black}
foreground = ${colors.white}
border-color = ${colors.black}

enable-ipc = true
wm-restack = bspwm
padding = 1
modules-right = s speed a cpu s

#speed s vol s cpu s

fix-center = true
top = true

width = 22%
height = 27
offset-y = 5
offset-x = 1485
border-size = 4

font-0 = Hack Nerd Font:style=Regular:size=10:antialias=true;3
font-1 = Font Awesome 5 Free Solid:size=13:antialias=true;3
font-2 = Font Awesome 5 Brands:size=13:antialias=true;3
font-3 = Sans:size=7:antialias=true;3

#modules-center = a
#padding-right = 3


[bar/centro]

monitor = "HDMI-A-0"

background = ${colors.black}
foreground = ${colors.white}
border-color = ${colors.black}

enable-ipc = true
wm-restack = bspwm
modules-center = date a time 
fix-center = true
padding = 1q
top = true

width = 15%
height = 27
offset-x = 815
offset-y = 5
border-size = 4

font-0 = Hack Nerd Font:style=Regular:size=10:antialias=true;3
font-1 = Font Awesome 5 Free Solid:size=13:antialias=true;3
font-2 = Font Awesome 5 Brands:size=13:antialias=true;3
font-3 = Sans:size=7:antialias=true;3
